<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_person_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chinadream.www.userclient.ui.PersonInfoActivity"
    android:orientation="vertical"
    android:background="#ddd">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/activity_base"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"
                android:textSize="18dp"
                android:padding="8dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/iv_user_portrait_in_person_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/shopxxx"
                />

        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#ddd"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:padding="8dp"
                android:textStyle="bold"
                android:text="用户名"
                />
            <TextView
                android:id="@+id/tv_change_name_in_person_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:textSize="18dp"
                android:singleLine="true"
                android:hint="改一个名字"
                android:padding="5dp"/>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:background="#ddd"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="账号绑定"
            android:textSize="18dp"
            android:padding="5dp"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#ddd"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/phone_in_preson_info"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="手机"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="18dp"
                android:paddingLeft="5dp"
                />
            <TextView
                android:id="@+id/tv_binding_phone_in_person_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="未绑定"
                android:textColor="@drawable/selector_for_text_in_person_info"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:paddingLeft="5dp"
                />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#ddd"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/weichat_in_person_info"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="微信"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="18dp"
                android:paddingLeft="5dp"
                />
            <TextView
                android:id="@+id/tv_binding_weichat_in_person_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="未绑定"
                android:textColor="@drawable/selector_for_text_in_person_info"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:paddingLeft="5dp"
                />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#ddd"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qq_in_person_info"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="QQ"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="18dp"
                android:paddingLeft="5dp"
                />
            <TextView
                android:id="@+id/tv_binding_QQ_in_person_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="未绑定"
                android:textColor="@drawable/selector_for_text_in_person_info"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:paddingLeft="5dp"
                />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#ddd"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/weibo_in_person_info"
                android:layout_margin="5dp"/>
            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="新浪微博"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="18dp"
                android:paddingLeft="5dp"
                />
            <TextView
                android:id="@+id/tv_binding_weibo_in_person_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@drawable/selector_for_text_in_person_info"
                android:text="未绑定"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:paddingLeft="5dp"
                />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:background="#ddd"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="安全设置"
            android:textSize="18dp"
            android:padding="5dp"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#ddd"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="登录密码"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="18dp"
                android:paddingLeft="5dp"
                />
            <TextView
                android:id="@+id/tv_set_login_pass_in_person_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@drawable/selector_for_text_in_person_info"
                android:text="未设置"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:paddingLeft="5dp"
                />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#ddd"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="支付密码"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="18dp"
                android:paddingLeft="5dp"
                />
            <TextView
                android:id="@+id/tv_set_pay_pass_in_person_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="未设置"
                android:textColor="@drawable/selector_for_text_in_person_info"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:paddingLeft="5dp"
                />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#ddd"/>


    </LinearLayout>




</LinearLayout>
