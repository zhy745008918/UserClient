<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_fragment_parent"
    tools:context="com.chinadream.www.userclient.fragment.FragmentHome">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swip_refresh_in_fragment_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recy_list_dis_in_fragment_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/rl_search_in_fragment_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#20b2aa"
                android:visibility="invisible">
                <TextView
                    android:id="@+id/tv_search_in_fragment_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="搜索"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="@drawable/bg_for_home_search_text"
                    android:layout_margin="10dp"/>
            </RelativeLayout>
        </FrameLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
